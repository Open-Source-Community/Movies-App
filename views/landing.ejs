<body>
 
    
    <h1>   landing page slider with update of the hotest movies  </h1>


    <div>
        <% for(var i=0; i<categories.length; i++) { %>
 
                <!-- div card-->
            <div class="filmCard">
<div> <%=categories[i].name%>  </div>
<div> <%=categories[i].image%>  </div>
        <%for(var j=0; j<categories[i].films.length; j++) { %>
            <% var film=categories[i].films[j] %>
         <div class="filmCards">
             <% film.name %>
             <% film.img  %>

         </div>
            
            <%}%>
        <%}%>
    </div>
</body>
